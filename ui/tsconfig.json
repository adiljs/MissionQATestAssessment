{
  "compilerOptions": {
    "target": "ES2018",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": ["ES2018"],
    "outDir": "dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": false,
    "sourceMap": true,
    "inlineSources": true,
    "types": ["node", "@wdio/globals/types"]
  },
  "include": [
    "features/**/*.ts",
    "step-definitions/**/*.ts",
    "pages/**/*.ts",
    "src/**/*.ts",
    "wdio.conf.ts",
    "reports.ts",
    "types/**/*.d.ts",
    "..."
  ],
  "exclude": ["node_modules", "dist"]
}
